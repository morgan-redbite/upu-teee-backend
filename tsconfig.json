{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "useDefineForClassFields": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "server.ts",
    "src/**/*.ts",
    "types",
  ]
}
